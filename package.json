{
  "name": "krosmobot",
  "version": "0.1.2",
  "private": false,
  "description": "A stupid Discord bot for a stupid Dofus guild...",
  "repository": "https://github.com/brinkflew/krosmobot.git",
  "author": "Antoine van Serveyt <avs+krosmobot@avanserv.com>",
  "license": "MPL-2.0",
  "main": "dist/client.js",
  "engines": {
    "node": "v14.15.0"
  },
  "scripts": {
    "precommit": "yarn lint",
    "lint": "eslint --ext ts src",
    "lint:fix": "eslint --ext ts src --fix",
    "clean": "rm -rf dist",
    "build": "tsc -p .",
    "build:clean": "yarn clean && yarn build",
    "install:clean": "rm -rf node_modules && yarn install",
    "all:clean": "yarn install:clean && yarn build:clean",
    "start": "yarn all:clean && pm2 start ecosystem.config.js --env production --update-env",
    "reload": "yarn all:clean && pm2 reload ecosystem.config.js --env production --update-env",
    "serve:pm2": "nodemon --exec 'yarn lint && yarn build:clean && pm2 reload ecosystem.config.js --update-env'",
    "serve": "nodemon --exec 'yarn lint && yarn build:clean && node dist/client.js'",
    "monit": "pm2 monit",
    "remote:start": "ssh -t krosmobot 'cd krosmobot/run && yarn start'",
    "remote:reload": "ssh -t krosmobot 'cd krosmobot/run && yarn reload'",
    "remote:list": "ssh -t krosmobot 'cd krosmobot/run && yarn pm2 list'",
    "remote:monit": "ssh -t krosmobot 'cd krosmobot/run && yarn pm2 monit'",
    "deploy": "git push krosmobot",
    "remote:upgrade": "ssh -t krosmobot 'cd krosmobot/run && git fetch && git reset --hard origin/main && yarn pm2 delete kbot && yarn start'"
  },
  "dependencies": {
    "@pm2/io": "^4.3.5",
    "axios": "^0.21.0",
    "canvas": "^2.6.1",
    "chart.js": "^2.9.4",
    "chartjs-node-canvas": "^3.0.6",
    "cheerio": "^1.0.0-rc.3",
    "common-tags": "^1.8.0",
    "discord-akairo": "^8.1.0",
    "discord.js": "^12.4.1",
    "dotenv": "^8.2.0",
    "html-entities": "^1.3.1",
    "mongoose": "^5.10.15",
    "nanoid": "^3.1.18",
    "rss-parser": "^3.9.0",
    "twitter-lite-v2": "^0.14.0"
  },
  "devDependencies": {
    "@skyra/eslint-config": "^5.3.3",
    "@types/axios": "^0.14.0",
    "@types/chart.js": "^2.9.30",
    "@types/cheerio": "^0.22.22",
    "@types/common-tags": "^1.8.0",
    "@types/mongoose": "^5.10.1",
    "@types/node": "^14.14.9",
    "@types/ws": "^7.4.0",
    "@types/xml2js": "^0.4.7",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.6",
    "pm2": "^4.5.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
